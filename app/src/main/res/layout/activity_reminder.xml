<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activities.CheckListReminderActivity"
    android:orientation="vertical"
    android:background="@android:color/transparent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" چک لیست جدید"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:textSize="20sp"
            android:textColor="#fff"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirmChangesButton"
            android:src="@drawable/ic_check_box_black_24dp"
            android:background="@color/toolbar"
            android:tint="@color/white"
            android:padding="10dp"
            android:onClick="save"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/home_toolbar"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/task"
            android:layout_margin="10dp"
            android:textColor="@color/toolbar"
            android:text="کاری که باید انجام دهم :"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/whatToDo"
            android:textDirection="rtl"
            android:layout_below="@+id/task"
            android:background="@drawable/dialog"
            android:layout_margin="10dp"
            android:textSize="16sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categorySpinner"
                android:spinnerMode="dropdown"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp">

            </Spinner>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateToDo"
                    android:drawableTop="@drawable/ic_event_note_black_24dp"
                    android:drawableTint="@color/toolbar"
                    android:layout_below="@+id/task"
                    android:background="@drawable/dialog"
                    android:layout_margin="10dp"
                    android:onClick="pickDate"
                    android:textSize="16sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/timeToDo"
                    android:textDirection="rtl"
                    android:drawableTop="@drawable/ic_access_alarm_black_24dp"
                    android:layout_below="@+id/task"
                    android:drawableTint="@color/toolbar"
                    android:background="@drawable/dialog"
                    android:layout_margin="10dp"
                    android:onClick="pickTime"
                    android:textSize="16sp"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>